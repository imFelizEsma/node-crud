<%- include('layouts/header') %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if(message) {%>
        <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          <strong>
            <%= message.message %>
          </strong>
        </div>
      <% } %>
      <h1 class="text-center">Lista de Piezas</h1>
      <div class="table-responsive">
        <table class="table table-striped text-center">
          <thead>
            <tr class="table-dark align-middle">
              <th>ID</th>
              <th>Code</th>
              <th>Imagen</th>
              <th>Nombre</th>
              <th>Descripcion</th>
              <th>Cantidad en Alm</th>
              <th>Precio</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% stuffs.forEach((stuff, index) => { %>
            <tr class="align-middle">
              <td><%= ++index %></td>
              <td><%= stuff.code %></td>
              <td><img src="<%= stuff.image %>" width="50" class="img-thumbnail"></td>
              <td><%= stuff.name %></td>
              <td><%= stuff.description %></td>
              <td><%= stuff.amount %></td>
              <td><%= stuff.price %></td>
              <td>
                <a href="/edit/<%= stuff._id %>"><i class="fa fa-pen-to-square fa-lg"></i></a>
                <a href="/delete/<%= stuff._id %>"><i class="fa-solid fa-trash"></i></a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('layouts/footer') %>
