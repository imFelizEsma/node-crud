<%- include('layouts/header') %>

<div class="container px-5 my-5">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <h1>Editar Usuario (<%= user.name %>)</h1>
        <form
            id="add-form"
            action="/update/<%= user._id %>"
            method="post"
            enctype="multipart/form-data"
        >
            <div class="mb-3">
            <label class="form-label" for="name">Nombre</label>
            <input
                class="form-control"
                value="<%= user.name %>"
                name="name"
                type="text"
                placeholder="Name"
            />
            </div>
            <div class="mb-3">
            <label class="form-label" for="email">Nombre</label>
            <input
                class="form-control"
                value="<%= user.email %>"
                name="email"
                type="email"
                placeholder="Email Address"
            />
            </div>
            <div class="mb-3">
            <label class="form-label" for="phone">Nombre</label>
            <input
                class="form-control"
                value="<%= user.phone %>"
                name="phone"
                type="phone"
                placeholder="Phone"
            />
            </div>
            <div class="mb-3">
            <label class="form-label">Foto</label>
            <input name="image" class="form-control" type="file"/>
            <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1">
            </div>

            <input type="hidden" name="old_image" value="<%= user.image %>">

            <div class="d-grid">
            <input
                type="submit"
                class="btn btn-primary btn-lg"
                value="Edit User"
            />
            </div>
        </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<%- include('layouts/footer') %>